<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>

  <link rel="preload" href="/css/style.css?v={% version %}" as="style">

  <link rel="canonical" hreflang="en-US" href="https://knurlmastering.com/" />
  <link rel="alternate" hreflang="x-default" href="https://knurlmastering.com/" />
  <link rel="alternate" hreflang="{{ locale }}" href="{{ site_url }}{{ page.url }}" />
  <link rel="alternate" hreflang="{{ alt_locale }}" href="{{ site_url }}/{{ alt_locale }}/" />

  
  <meta name="description" content="{{ description }}">
  <meta name="keywords" content="{{ keywords }}">
  <meta name="author" content="Knurl Mastering">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <meta name="theme-color" content="#383838" /> 
  
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <meta name="apple-mobile-web-app-title" content="Knurl" />
  
  <meta property="og:url" content="{{ site_url }}">
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:image" content="https://knurlmastering.com/knurlmastering-og.jpg">
  <meta property="og:image:width" content="1024">
  <meta property="og:image:height" content="683">
  <meta name="twitter:card" content="summary_large_image">
  <meta property="twitter:domain" content="{{ site_url }}">
  <meta property="twitter:url" content="{{ site_url }}">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ description }}">
  <meta name="twitter:image" content="https://knurlmastering.com/knurlmastering.jpg">

  <link rel="stylesheet" href="/css/style.css?v={% version %}">  
</head>

<script async src="https://www.googletagmanager.com/gtag/js?id=G-LLZNH0P7WX"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  // Default: no cookies, no identifiers
  gtag('config', 'G-LLZNH0P7WX', {
    'anonymize_ip': true,      // mask IP addresses
    'storage': 'none',         // do not set cookies
    'client_storage': 'none'   // GA4-specific: block _ga cookies
  });

  // Extra privacy: deny all storage just in case
  gtag('consent', 'default', {
    'ad_storage': 'denied',
    'analytics_storage': 'denied'
  });
</script>

<body>  
  
  <main>
    {{ content | safe }}
  </main>

  {% include "partials/footer.njk" %}

</body>
</html>
